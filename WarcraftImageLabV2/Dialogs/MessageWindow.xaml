<Window x:Class="WarcraftImageLabV2.Dialogs.MessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WarcraftImageLabV2.Dialogs"
        mc:Ignorable="d"
        Title="MessageWindow" Height="170" Width="370" Background="#4C4C4C" WindowStartupLocation="CenterOwner" KeyDown="Window_KeyDown">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>

        <TextBlock
            x:Name="textBlockMessage"
            TextWrapping="Wrap"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
        />

            <Button
                Style="{StaticResource btnOrange}"
                x:Name="btnOk"
                Grid.Row="1"
                HorizontalAlignment="Right"
                Width="60"
                Margin="5"
                Content="OK" Click="btnOk_Click"
            />

    </Grid>
</Window>
